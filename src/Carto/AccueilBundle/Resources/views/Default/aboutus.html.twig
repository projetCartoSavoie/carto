{% endstylesheets %}
{% endblock %}

{% block title %}{{"A propos" | trans}}{% endblock %}

{% block body %}{{ parent() }}
	<table class="aPropos" cellspacing="0" cellpadding="20">
		<tr>
			<th><h3>A propos du site</h3></th>
			<th><h3>Liens</h3></th>
			<th><h3>Commentaires</h3></th>
			<th><h3>A propos des auteurs</h3></th>
