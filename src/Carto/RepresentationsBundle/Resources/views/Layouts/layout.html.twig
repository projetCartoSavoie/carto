{% block script %}
	$(document).ready(function(){
		$("#form_recherche").submit(function(){ 
			var search = $('#search').val();
			var url = "{{ asset('bundles/CartoRepresentationsBundle/action/main_action.php') }}";
			$.ajax({
				type: "POST",
				url: url,
				data: {
					cmd: 'search_action',
					search: search
				},
				cache: false,
				success: function(response) {
					var result = $.parseJSON(response);
					if(result.success){
						var data = result.data;
						if(representation){
							$('svg').remove();
						}
						representation.show(data); 
					}
				}
			});    
			return false;
		});
	});
{% endblock %}

